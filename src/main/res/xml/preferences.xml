<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="@string/specific_word_default_value"
        android:inputType="text"
        android:key="@string/specific_word_key"
        android:selectAllOnFocus="true"
        android:title="@string/specific_word_preference_title"></EditTextPreference>
    <ListPreference
        android:defaultValue="@string/section_value_default_value"
        android:entries="@array/settings_section_labels"
        android:entryValues="@array/settings_section_values"
        android:key="@string/section_key"
        android:title="@string/section_preference_title"></ListPreference>
</PreferenceScreen>